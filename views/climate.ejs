<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/images/icon.svg" type="image/icon type">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/6e31df4930.js" crossorigin="anonymous"></script>
    <!-- <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> -->
    <link rel="stylesheet" href="/css/app.css">
    <title>
        <%= data.location.name%>
    </title>
</head>

<body onload="realtimeclock()">

    <div class="bg">
        <div class="container-fluid py-3">
        </div>
        <%- include("partials/flash") %>

            <div class="container-fluid mt-5" id="card">
                <div class="row mt-5 mb-3">
                    <div class="col mt-3">
                        <div class="container" id="img-temp">
                            <img src="<%= i %>" id="weather-img">
                        </div>
                        <div class="container " id="img-temp">
                            <%= data.current.temp_c %> °C
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col mt-2">
                        <div class="container" id="cont-name">
                            Wind
                        </div>
                        <div class="container" id="wind-data">
                            <i class="fas fa-wind">&nbsp;&nbsp;</i>
                            <%=data.current.wind_mph%>
                                MPH(Speed)
                        </div>
                        <div class="container" id="wind-data">
                            <i class="fas fa-map-signs">&nbsp;&nbsp;&nbsp;&nbsp;</i>
                            <%=data.current.wind_dir%>(Direction)
                        </div>
                        <div class="container" id="wind-data">
                            &nbsp;
                            <%=data.current.wind_degree%>°(Degrees)
                        </div>
                    </div>
                </div>

                <div class="row pt-3 mt-3">
                    <div class="col">
                        <div class="container" id="city-name">
                            <% if(name!="" ) {%>
                                <div>
                                    <%=name%>
                                </div>
                                <%}else {%>
                                    <div>
                                        <%= data.location.name %>
                                    </div>
                                    <%} %>

                        </div>
                        <div class="container" id="cont-name">
                            <%= data.location.region %>
                        </div>
                        <div class="container" id="cont-name">
                            <%= data.location.country %>
                        </div>
                    </div>
                </div>
                <div class="row pt-3 mb-5">
                    <div class="col">
                        <div class="container" id="date">
                            <%= date_data.date %>
                        </div>
                        <div class="container" id="date-time">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="container" id="date">
                            <%= data.location.localtime%>
                        </div>
                        <div class="container" id="date">
                            <%= data.location.tz_id %>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col" id="forecast">
                        <a href="/forecast"><button type="button" class="btn mx-5 float-end"
                                id='forecast-btn'>Forecast</button></a>

                    </div>
                </div>
            </div>


            <div class="container-fluid fixed-bottom" id="back">
                <div class="row" id="back-row">
                    <div class="col">
                        <a href="/"><button type="button" class="btn float-end" id="back-btn">Back</button></a>
                    </div>
                </div>

            </div>
    </div>





    <script>
        function realtimeclock() {
            var rtClock = new Date;
            var hr = rtClock.getHours();
            var min = rtClock.getMinutes();
            var sec = rtClock.getSeconds();

            var dt = rtClock.getDate();
            var mon = rtClock.getMonth();
            var year = rtClock.getFullYear();
            var am_pm = (hr < 12) ? "AM" : "PM";

            hr = (hr > 12) ? hr - 12 : hr;

            hr = ("0" + hr).slice(-2);
            min = ("0" + min).slice(-2);
            sec = ("0" + sec).slice(-2);

            document.getElementById('date-time').innerHTML = hr + ":" + min + ":" + sec + ":" + am_pm;


            var t = setTimeout(realtimeclock, 500);
        }
    </script>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>


</body>

</html>