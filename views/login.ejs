<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/images/icon.svg" type="image/icon type">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/register.css">
    <title>Login</title>
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand mx-5" href="/">Home </a>
        <!-- <button class="navbar-toggler mx-3" data-bs-toggle="collapse" data-bs-target="#navbar1">
          <span class="navbar-toggler-icon"></span>
        </button> -->

        <div class="navbar ms-auto">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
            </ul>
        </div>
    </nav>
    <% if(error && error.length > 0){ %>

        <div>
            <div class="alert alert-danger  alert-dismissible" style="margin-bottom: 0px;">
                <strong><%=error %></strong>
                <a href="/login" class="close float-end" data-dismiss="alert" aria-label="close">&times;</a>
            </div>
        </div>
        <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert alert-success alert-dismissible" style="margin-bottom: 0px;">
                    <strong><%= success %></strong>
                    <a href="/login" class="close float-end" data-dismiss="alert" aria-label="close">&times;</a>

                </div>
                <% } %>

                    <% if(warning && warning.length > 0){ %>
                        <div class="alert alert-warning alert-dismissible" style="margin-bottom: 0px;">
                            <strong><%= warning %></strong>
                            <a href="/login" class="close float-end" data-dismiss="alert" aria-label="close">&times;</a>

                        </div>
                        <% } %>
                            <div class="bg">

                                <div class="container" id="register-block">
                                    <div class="row" id="title"> Login</div>
                                    <div class="row">
                                        <form action="/login" method="POST">

                                            <div class="row my-3 mx-5">
                                                <div class="col ">
                                                    <div class="form-group">
                                                        <label for="email">Email</label>
                                                        <input type="email" class="form-control" name="username" id="email" placeholder="Email" autocomplete="off" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row my-3 mx-5">
                                                <div class="col">
                                                    <div class="form-group">
                                                        <label for="password">Password</label>
                                                        <input type="password" class="form-control" name="password" id="password" placeholder="Password" autocomplete="off" required>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mt-5" id="submit-block">
                                                <div class="col-4"></div>
                                                <div class="col-4">
                                                    <a style="text-decoration: none;"><button type="submit" data-toggle="confirmation" class="btn" id="sub-btn">Login</button></a>
                                                </div>
                                                <div class="col-4"></div>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>




                            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>


                            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
                            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>

</body>

</html>