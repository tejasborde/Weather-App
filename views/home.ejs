<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/images/icon.svg" type="image/icon type">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
    <title>Weather App</title>
</head>

<body>


    <div class="bg">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><img src="/images/icon.svg" height="30" width="30">&nbsp;</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav  ms-auto">
        <% if(!currentUser)
                    {%>
                        <li class="nav-item">
                            <a class="nav-link active" href="/register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/login">Login</a>
                        </li>
                        <%}else
                        {%>
                            <li class="nav-item">
                                <a class="nav-link active" href="#">
                                    <%= currentUser.firstname%>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/logout">Logout</a>
                            </li>
                            <%}
                    
                    
                    %>
        
      </ul>
    </div>
  </div>
</nav>
        
        <div class="container-fluid" id="title">
            Weather !!!
        </div>
        <div class="container" id="flash-msg">
            <% if(error && error.length > 0){ %>

                <div>
                    <div class="alert alert-danger  alert-dismissible" style="margin-bottom: 0px;">
                        <strong><%=error %></strong>
                        <a href="/" class="close float-end" data-dismiss="alert" aria-label="close">&times;</a>
                    </div>
                </div>
                <% } %>
                    <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible" style="margin-bottom: 0px;">
                            <strong><%= success %></strong>
                            <a href="/" class="close float-end" data-dismiss="alert" aria-label="close">&times;</a>

                        </div>
                        <% } %>

                            <% if(warning && warning.length > 0){ %>
                                <div class="alert alert-warning alert-dismissible" style="margin-bottom: 0px;">
                                    <strong><%= warning %></strong>
                                    <a href="/" class="close float-end" data-dismiss="alert" aria-label="close">&times;</a>

                                </div>
                                <% } %>
        </div>
        <div class="container">
            <div class="container-fluid " id="form">
                <div class="row pt-3 my-2">
                    <form action="/climate" method="post">
                        <label for="CityList" class="form-label" style="text-align: center;">ENTER CITY </label>
                        <input class="form-control" list="datalistOptions" name='city' id="CityList" placeholder="Type to search..." required>
                        <datalist id="datalistOptions">
                        <%
                        for (let index = 0; index < cities.length; index++) 
                        {%>
                            
                            <option value="<%= cities[index] %>"></option>
                        <%}
                        
                        %>
                        
                </datalist>
                        <button type="submit" id="get-btn" class="btn  my-2 mx-5">Get Weather</button>
                    </form>
                </div>


            </div>
        </div>


    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>


</body>

</html>